@model VasudaDataAccess.DTOs.AdminNotificationViewModel

@{
    ViewBag.Title = "Notification";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var count = 1;
}


<section class="content">
    <div class="container-fluid">

        <!--Notification drop down start-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Manage Notifications</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        Start creating your amazing application!
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        Footer
                    </div>
                    <!-- /.card-footer-->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!--Notification drop down end-->

        <!--Notification table start-->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Notifications</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Notifications.Count == 0)
                        {
                            <h3 style="text-align:center">NO NOTIFICATION AVAILABLE</h3>
                        }
                        else
                        {
                            <table id="notificationTable" class="table table-bordered table-striped table-hover table-sm table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Subject</th>
                                        <th>Date Published</th>
                                        <th>Read Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var notification in Model.Notifications)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@notification.Subject</td>
                                            <td>@notification.DateCreated</td>
                                            <td>@notification.IsRead</td>
                                            <td>
                                                <button type="button" id="editNotificationBtn" class="btn btn-outline-success btn-sm">Edit</button>
                                                <button type="button" id="deleteNotificationBtn" class="btn btn-outline-danger btn-sm">Delete</button>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Subject</th>
                                        <th>Date Published</th>
                                        <th>Read Status</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!--Notification table end-->

    </div>
</section>


