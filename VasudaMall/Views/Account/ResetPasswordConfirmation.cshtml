@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
    <section class="row">
        <div class="slide">
            <div class="overlay2"></div>
            <div class="animated fadeInUp overlay-title" id="title2" style="color:#ccc">
                <b>Password Reset</b>
            </div>
            <div class="col-lg-5 message-form">
                <p>
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>
            <img src="~/vasuda-template/images/mv.jpg" />
        </div>
    </section>

