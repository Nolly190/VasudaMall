@{
    Layout="~/Views/Shared/_Layout.cshtml";
}
@model List<VasudaDataAccess.Model.ProductTable>
<section class="row">
    <div class="slide3">
        <img src="~/Content/images/tl.jpg" />
    </div>
</section>
<section class="row" style="background:#f0f0f0">
    <div class="offset-lg-1 col-lg-10 section-title">
        Our Clearance <b>Products</b>
    </div>
    <div class="offset-lg-1 col-lg-10 products">
        <div class="row">
            @foreach (var item in Model)
            {
                var img = string.IsNullOrEmpty(item.ImageTables?.FirstOrDefault()?.Path) ? "~/Content/images/aa.jpg"  :item.ImageTables?.FirstOrDefault()?.Path;
                <div class="p-tab">
                    <div class="p-image">
                        <img src="@img"/>
                    </div>
                    <div class="p-name">@item.Title</div>
                    <div class="p-price">₦ @item.Price</div>
                </div>
            }

        </div>
    </div>
    @*<div class="offset-lg-4 col-lg-4 load">
        <i class="fas fa-plus-circle" aria-hidden="true"></i><br />Load More
    </div>*@
</section>
