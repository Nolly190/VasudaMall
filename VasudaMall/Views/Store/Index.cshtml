@model VasudaDataAccess.DTOs.StoreViewModel
@{
    ViewBag.Title = "Index";
    Layout="~/Views/Shared/_Layout.cshtml";
}
<section class="row">
    <div class="slide2">
        <div class="skitter skitter-large skit2" style="max-height:400px">
            <ul>
                <li>
                    <a href="#cut">
                        <img src="~/Content/images/style.jpg" class="cut" />
                    </a>
                    <div class="label_text" style="font-family:">
                        <p>
                            <div class="animated fadeInDown" id="title" style="color:#000">
                                <b>Fashion</b>
                            </div>
                        </p>
                    </div>
                </li>
                <li>
                    <a href="#swapBarsBack">
                        <img src="~/Content/images/aa.jpg" class="swapBarsBack" />
                    </a>
                    <div class="label_text" style="font-family:">
                        <p>
                            <div class="animated fadeInDown" id="title" style="font-family:roboto slab;color:#000;"><b>Tech & Security</b></div>
                        </p>
                    </div>
                </li>
                <li>
                    <a href="#swapBarsBack">
                        <img src="~/Content/images/cc.jpg" class="swapBarsBack" />
                    </a>
                    <div class="label_text" style="font-family:montserrat bold;">
                        <p>

                            <div class="animated fadeInDown" id="title" style="font-family:roboto slab;color:#000;"><b>Health</b></div>
                        </p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</section>
<section class="row" style="background:#f0f0f0">
    <div class="offset-lg-1 col-lg-10 section-title oc">
        Our <b>Categories</b>
    </div>
    <div class="offset-lg-1 col-lg-10 ">
        <div class="row">
            @foreach (var item in Model.Categories)
            {
                <div class="col-lg-2 cat-tab">
                    <div class="overlay">
                    </div>
                    <div class="store-name">
                        @item.CategoryName<br/>
                        <a href="#" class="btn btn-xs btn-warning getProducts" data-type="@item.CategoryName" style="margin-top: 5px; padding: 8px; font-size: 0.6em">Shop Now</a>
                    </div>
                    <img src="~/Content/images/aa.jpg"/>
                </div>

            }

        </div>
    </div>
    <div class="offset-lg-1 col-lg-10 section-title">

    </div>
    <div class="offset-lg-1 col-lg-10 products">
        <div class="row">
            
            @foreach (var item in Model.Products)
            {
                var name = string.IsNullOrEmpty(item.ImageTables.FirstOrDefault()?.Path) ? "~/Content/images/aa.jpg" :item.ImageTables.FirstOrDefault().Path;
                <div class="p-tab">
                    <div class="p-image">
                        <img src="@Url.Content(name)"/>
                    </div>
                    <div class="p-name">@item.Title</div>
                    <div class="p-price">
                        $ @item.Price
                        <span class="float-right">
                            Available: @item.Quantity
                        </span>
                    </div>
                    <div class="form-group row">
                        <label class="col-3"><b>Quantity: </b></label>
                        <span>
                            <input type="number" class="form-control form-control-sm col-4 productQuantity" value="1" min="1" />
                        </span>
                    </div>
                    <button type="button" data-id="@item.Id" class="btn btn-outline-primary btn-sm float-right mt-0 addProductBtn">
                        <i class="fas fa-cart-plus fa-lg mr-2"></i>
                        Add to Checkout
                    </button>
                </div>

            }
         
        </div>
    </div>
 
  
        
  
</section>
