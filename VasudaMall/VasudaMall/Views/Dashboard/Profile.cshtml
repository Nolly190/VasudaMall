@model VasudaMall.ViewModels.ProfileViewModel

@{
    Layout = "~/Views/shared/_LayoutDashboard.cshtml";
    ViewBag.Title = "Profile";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Profile</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href=@Url.Action("Index", "Dashboard")>Home</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-10 col-sm-12 content">
                <div class="container-fluid">
                    <div class="row">

                        <!--Profile display col start-->
                        <div class="col-lg-4 col-sm-12 container-fluid">
                            <div class="card card-blue card-outline">

                            </div>
                        </div>
                        <!--Profile display col end-->

                        <!--Profile management col start-->
                        <div class="col-lg-8 col-sm-12">
                            <!--Profile row start-->
                            <div class="row">
                                <div class="card card-primary card-outline card-outline-tabs">
                                    <div class="card-header p-0 border-bottom-0">
                                        <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" id="change-password-tab" data-toggle="pill" href="#change-password" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Change Password</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="withdrawal-account-tab" data-toggle="pill" href="#withdrawal-account" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Add Withdrawal Account</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Messages</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="card-body">
                                        <div class="tab-content" id="custom-tabs-four-tabContent">
                                            <!--Change Password start-->
                                            <div class="tab-pane fade show active" id="change-password" role="tabpanel" aria-labelledby="change-password-tab">
                                                <!-- change password Form start-->
                                                <div class="card card-info">
                                                    <!-- form start -->
                                                    <form class="form-horizontal">
                                                        <div class="card-body">
                                                            <div class="form-group">
                                                                <label for="oldPassword">Old Password</label>
                                                                <input type="password" class="form-control" id="oldPassword" placeholder="Old Password">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="newPassword" ">New Password</label>
                                                                <input type="password" class="form-control" id="newPassword" placeholder="New Password">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="confirmNewPassword">Confirm New Password</label>
                                                                <input type="password" class="form-control" id="confirmNewPassword" placeholder="Confirm New Password">
                                                            </div>
                                                        </div>
                                                        <!-- /.card-body -->
                                                        <div class="card-footer">
                                                            <button type="submit" class="btn btn-info">Change Password</button>
                                                        </div>
                                                        <!-- /.card-footer -->
                                                    </form>
                                                </div>
                                                <!-- change password Form start-->
                                                <!-- /.card -->
                                            </div>
                                            <!--Change Password end-->
                                            <!--Withdrawal account start-->
                                            <div class="tab-pane fade" id="withdrawal-account" role="tabpanel" aria-labelledby="withdrawal-account-tab">
                                                <!-- withdrawal account Form start-->
                                                <div class="card card-info">
                                                    <!-- form start -->
                                                    <form class="form-horizontal">
                                                        <div class="card-body">
                                                            <div class="form-group">
                                                                <label for="accountName">Account Name</label>
                                                                <input type="password" class="form-control" id="accountName" placeholder="Account Name">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="accountNumber" ">Account Number</label>
                                                                <input type="password" class="form-control" id="accountNumber" placeholder="Account Number">
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Bank Name</label>
                                                                <select class="form-control select2" style="width: 100%;">
                                                                    <option selected="selected">Alabama</option>
                                                                    <option>Alaska</option>
                                                                    <option>California</option>
                                                                    <option>Delaware</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <!-- /.card-body -->
                                                        <div class="card-footer">
                                                            <button type="submit" class="btn btn-info">Add Account</button>
                                                        </div>
                                                        <!-- /.card-footer -->
                                                    </form>
                                                </div>
                                                <!-- Withdrawal account Form start-->
                                                <!-- /.card -->
                                            </div>
                                            <!--Withdrawal account end-->
                                            <div class="tab-pane fade" id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">
                                                Morbi turpis dolor, vulputate vitae felis non, tincidunt congue mauris. Phasellus volutpat augue id mi placerat mollis. Vivamus faucibus eu massa eget condimentum. Fusce nec hendrerit sem, ac tristique nulla. Integer vestibulum orci odio. Cras nec augue ipsum. Suspendisse ut velit condimentum, mattis urna a, malesuada nunc. Curabitur eleifend facilisis velit finibus tristique. Nam vulputate, eros non luctus efficitur, ipsum odio volutpat massa, sit amet sollicitudin est libero sed ipsum. Nulla lacinia, ex vitae gravida fermentum, lectus ipsum gravida arcu, id fermentum metus arcu vel metus. Curabitur eget sem eu risus tincidunt eleifend ac ornare magna.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Profile /.card end -->
                            </div>
                            <!--Profile row end-->
                            <!--Exchange rate row start-->
                            <div class="row">
                                <div class="card card-green card-outline">
                                    <div class="card-header">
                                        <h3 class="card-title">Today's Exchange Rate</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="notificationTable" class="table table-bordered table-striped table-hover table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Dollar to Naira</th>
                                                    <th>Dollar to Cedis</th>
                                                    <th>Dollar to Yuan</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Trident</td>
                                                    <td>
                                                        Internet
                                                        Explorer 4.0
                                                    </td>
                                                    <td>Win 95+</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!--Exchange rate /.card-body end-->
                                <!-- /.card -->
                            </div>
                            <!--Exchange rate row end-->
                        </div>
                        <!--Profile management col end-->
                    </div>
                </div>

                <!--Notification table row start-->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Most Recent News/Notifications</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="notificationTable" class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Subject</th>
                                            <th>Date Published</th>
                                            <th>Read Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Trident</td>
                                            <td>
                                                Internet
                                                Explorer 4.0
                                            </td>
                                            <td>Win 95+</td>
                                            <td> 4</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Subject</th>
                                            <th>Date Published</th>
                                            <th>Read Status</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <!--Notification table row end-->
            </section>
            <!-- /.Left col -->

            <!-- right col -->
            <section class="col-lg-2 col-sm-12 connectedSortable">
                <h2>ADVERTS</h2>
            </section>
            <!-- /.right col -->
        </div>
        <!-- /.row (main row) -->
     </div>
    <!--containre-fluid end-->
</section>