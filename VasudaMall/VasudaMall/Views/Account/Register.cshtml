@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="row">
    <div class="slide">
        <div class="overlay2"></div>
        <div class="animated fadeInUp overlay-title" id="title2" style="color:#ccc">
            <b>Register</b>
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="col-lg-5 message-form">
                <input type="email" name="@Html.NameFor(x=>x.Email)" class="col-lg-11" placeholder="Email">
                <input type="address" name="@Html.NameFor(x=>x.Address)" class="col-lg-11" placeholder="Address">
                <input type="Password" name="@Html.NameFor(x=>x.Password )" class="col-lg-11" placeholder="Password">
                <input type="password" class="col-lg-11" name="@Html.NameFor(x=>x.ConfirmPassword)" placeholder="Retype Password">
                <button type="submit" class="col-lg-5">Submit</button><br /><br />
                <span style="color:red">@Html.ValidationSummary()</span><br/>
                <hr />
                Already have an account?, <a href=@Url.Action("Login", "Account")>Login</a>
            </div>

        }
        <img src="~/vasuda-template/images/mv.jpg" />
    </div>
</section>
